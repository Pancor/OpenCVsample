<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:text="Find Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findBlueBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Load Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadImgBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/findBlueBtn"
    />
    <Button
            android:text="Load Video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadVideoBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loadImgBtn"/>
    <Button
            android:text="Find Balls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findBallsBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loadVideoBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Find table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findTableBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/findBallsBtn" app:layout_constraintHorizontal_bias="0.504"/>
</android.support.constraint.ConstraintLayout>